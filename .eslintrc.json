{
  "extends": [
    "./eslint.shared.json"
  ],
  "env": {
    "es6": true,
    "node": true,
    "mocha": true
  },
  "settings": {
    "flowtype": {
      "onlyFilesWithFlowAnnotation": false
    }
  },
  "rules": {
    "indent": [
      "error",
      2, {
        "SwitchCase": 1
      }
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    "curly": [
      "error",
      "all"
    ],
    "camelcase": ["error", {
      "properties": "never"
    }],
    "require-yield": 0,
    "eol-last": ["error", "always"]
  }
}
